#include "stdio.h"
#include "math.h"

int main() {
    int x1;
    int y1;
    int x2;
    int y2;
    int x3;
    int y3;
    int a;
    int b;
    int c;
    int p;
    scanf("%d %d %d %d %d %d", &x1, &y1, &x2, &y2, &x3, &y3);
    a=sqrt((x2-x1)*(x2-x1)+(y2-y1)*(y2-y1));
    b=sqrt((x3-x2)*(x3-x2)+(y3-y2)*(y3-y2));
    c=sqrt((x1-x3)*(x1-x3)+(y1-y3)*(y1-y3));
    p=(a+b+c)/2;
    printf("%d", a+b+c);
    printf("%f", sqrt(p*(p-a)+p*(p-b)+p*(p-c)));
    return 0;
}
